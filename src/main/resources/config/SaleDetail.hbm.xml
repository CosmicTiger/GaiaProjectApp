<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="GaiaProjectAppService.models.entities.SaleDetail" table="Sale_Detail" schema="GaiaDatabase">
        <id name="idSaleDetail">
            <column name="idSaleDetail" sql-type="int(11)"/>
        </id>
        <property name="idSale" insert="false" update="false">
            <column name="idSale" sql-type="int(11)"/>
        </property>
        <property name="idMerchandising">
            <column name="idMerchandising" sql-type="int(11)"/>
        </property>
        <property name="amount">
            <column name="amount" sql-type="double" precision="-1"/>
        </property>
        <property name="quantity">
            <column name="quantity" sql-type="int(11)"/>
        </property>
        <property name="discount">
            <column name="discount" sql-type="double" precision="-1"/>
        </property>
        <many-to-one name="saleByIdSale" class="GaiaProjectAppService.models.entities.Sale">
            <column name="idSale"/>
        </many-to-one>
        <many-to-one name="merchandisingByIdMerchandising" class="GaiaProjectAppService.models.entities.Merchandising" insert="false" update="false">
            <column name="idMerchandising"/>
        </many-to-one>
    </class>
</hibernate-mapping>