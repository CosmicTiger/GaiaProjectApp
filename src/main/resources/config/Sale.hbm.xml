<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="GaiaProjectAppService.models.entities.Sale" table="Sale" schema="GaiaDatabase">
        <id name="idSale">
            <column name="idSale" sql-type="int(11)"/>
        </id>
        <property name="idManagement">
            <column name="idManagement" sql-type="int(11)"/>
        </property>
        <property name="idWarehouse">
            <column name="idWarehouse" sql-type="int(11)"/>
        </property>
        <property name="saleCode">
            <column name="saleCode" sql-type="varchar(12)" length="12"/>
        </property>
        <property name="saleConcept">
            <column name="saleConcept" sql-type="varchar(70)" length="70" not-null="true"/>
        </property>
        <property name="saleDate">
            <column name="saleDate" sql-type="date" not-null="true"/>
        </property>
        <many-to-one name="managementByIdManagement" class="GaiaProjectAppService.models.entities.Management" insert="false" update="false">
            <column name="idManagement"/>
        </many-to-one>
        <many-to-one name="warehouseByIdWarehouse" class="GaiaProjectAppService.models.entities.Warehouse" insert="false" update="false">
            <column name="idWarehouse"/>
        </many-to-one>
        <set name="saleDetailsByIdSale" inverse="true">
            <key>
                <column name="idSale"/>
            </key>
            <one-to-many not-found="ignore" class="GaiaProjectAppService.models.entities.SaleDetail"/>
        </set>
    </class>
</hibernate-mapping>